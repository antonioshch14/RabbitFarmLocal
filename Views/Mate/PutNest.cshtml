@model RabbitFarmLocal.Models.MatingModel


<hr />
<div class="modal-content">
    <h4>Подтвердите или отредактируйте дату устновки гнезда в клетку к крольчихе @ViewBag.Rabbit</h4>
    <div class="col-md-4">
        <form asp-action="PutNest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PutNest" class="control-label"></label>
                <input asp-for="PutNest" class="form-control" value="@ViewBag.Date" data-date-format="yyyy-MM-dd" type="text" placeholder="yyyy-MM-dd" />
                <span asp-validation-for="PutNest" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => Model.Id)
            @Html.HiddenFor(model => Model.ECaller)
            <div class="form-group">
                <input type="submit" value="Гнездо утановлено" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
