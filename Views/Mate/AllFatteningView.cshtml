                        <td class="col-3 d-none d-sm-table-cell weight">
                            @Html.DisplayFor(modelItem => Model[i].BreedString)
                        </td>
                        <td class="col-1 d-none d-sm-table-cell weight">
                            @Html.DisplayFor(modelItem => Model[i].ProjectedWeight)
