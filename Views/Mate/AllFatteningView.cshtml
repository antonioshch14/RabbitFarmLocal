                            {
                                <sup class="alert alert-primary" style="padding:2px;" data-toggle="modal"
                                     data-target="#weight_modal-@Model[i].PartId-@Model[i].RabPartId">@Model[i].AverageWeight кг @Model[i].DaysSinceWeightMesurment д</sup>
