@model RabbitFarmLocal.Models.FatteningModel

<h4>Укажите вес забоя и дату</h4>
<hr />
<div class="modal-content">
    <div class="col-md-4">
        <form asp-action="FattKilled">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="KillDate" class="control-label"></label>
                <input asp-for="KillDate" value="@ViewBag.Date" asp-format="{0:dd-MM-yyyy}" class="form-control js-datepicker pull-left" />
                <span asp-validation-for="KillDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<FatStatusKilledView>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => Model.PartId)
            @Html.HiddenFor(model => Model.RabPartId)
            @Html.HiddenFor(model => Model.RabbitGender)
            @Html.HiddenFor(model => Model.ECaller)

            @Html.HiddenFor(model => Model.Collor)
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
